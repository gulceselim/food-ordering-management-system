@using FoodOrderingManagementSystem.Models
@{
}


@foreach (var product in Model)
{
    <div class="col-sm-3 product Search">
        <span class="product-thumb-info border-0">
            <a href="shop-cart.html" class="add-to-cart-product bg-color-primary">
                <span class="text-uppercase text-1">Sepete Ekle</span>
            </a>
            <a href="shop-product-sidebar-left.html">
                <span class="product-thumb-info-image">
                    <img alt="" class="img-fluid" src="@product.image">
                </span>
            </a>
            <span class="product-thumb-info-content product-thumb-info-content pl-0 bg-color-light">
                <a href="shop-product-sidebar-left.html">
                    <h4 class="text-4 text-primary">@product.product_name</h4>
                    <span class="price">
                        <ins><span class="amount text-dark font-weight-semibold">₺@product.price</span></ins>
                    </span>
                </a>
            </span>
        </span>
    </div>
}


@section script{

    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchText = $("#Search").val();
                $(".Search").each(function () {
                    if (!Contains($(this).text(), searchText)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}