
@{
    ViewBag.Title = "Comments";
}


@using FoodOrderingManagementSystem.Models
@model List<comment>

@foreach (restaurant restaurant in ViewBag.restaurants)
{
    <div class="row">
        <div class="col-md-12 Search">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">
                        @restaurant.restaurant_name
                    </h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>

                                <tr>
                                    <th>Comment Text</th>
                                    <th>User Name</th>
                                    <th>Comment Time</th>
                                    @if (User.IsInRole("restaurant"))
                                    {
                                        <th>Actions</th>
                                    }

                                </tr>

                            </thead>
                            <tbody>

                                @foreach (var comment in Model)
                                {
                                    if (restaurant.restaurant_id == comment.restaurant_id)
                                    {
                                    <tr class="Search">
                                        <td>@comment.comment_text</td>
                                        <td>@comment.user.first_name @comment.user.last_name</td>
                                        <td>@comment.comment_time</td>

                                        @if (User.IsInRole("restaurant"))
                                        {
                                            <td class="actions">
                                                <a href="#" class="btn btn-modern btn-rounded btn btn-danger comDel" data-comid="@comment.comment_id">Delete</a>
                                            </td>
                                        
                                        }
                                    </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}





@section scripts{

    <script>
        $(".comDel").click(function () {
            swal("Are you sure you want to do this?", {
                buttons: ["No", "Yes"],
            }).then((result) => {
                if (result) {
                    var comID = $(this).data("comid");

                    $.ajax(
                        {
                            type: "POST",
                            url: "/CommentAdmin/CommentDelete/" + comID,
                            success: function () {
                                swal({
                                    title: "İtem Deleted!",
                                    text: "You clicked the button!",
                                    icon: "success",
                                    button: "OK",
                                }).then(() => {
                                    window.location.replace("/CommentAdmin/Index");
                                });
                            },
                            error: function () {
                                swal("Your imaginary file is safe!");
                            }
                        });
                }
                else {
                    swal("Your imaginary file is safe!");
                }
            });
        });

    </script>




    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchText = $("#Search").val();
                $(".Search").each(function () {
                    if (!Contains($(this).text(), searchText)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}

