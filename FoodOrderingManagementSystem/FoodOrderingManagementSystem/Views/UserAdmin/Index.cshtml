@{
    ViewBag.Title = "Users";
}
@using FoodOrderingManagementSystem.Models
@model List<user>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">User</h4>
                <p class="card-category"></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Score</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (user user in Model)
                            {
                            <tr>
                                <td>@user.first_name</td>
                                <td>@user.last_name</td>
                                <td>@user.username</td>
                                <td>@user.user_email</td>
                                <td>@user.phone_number</td>
                                <td>@user.user_address</td>
                                <td>Deneme</td>
                                <td>@user.user_score</td>


                                <td class="actions">
                                    <a href="/UserAdmin/UserUpdate/@user.users_id" class="btn btn-modern btn-rounded btn-success mb-2">Güncelle</a>
                                    <a href="#" class="btn btn-modern btn-rounded btn btn-danger userSil" data-userid="@user.users_id">Sil</a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Content/assets_2/js/required/jquery-1.11.1.min.js"></script>

    <script>
        $(".userSil").click(function () {
            var result = confirm("Kayıt Silinsin mi? ");
            if (result) {
                var userID = $(this).data("userid");

                $.ajax(
                    {
                        type: "POST",
                        url: "/UserAdmin/UserDelete/" + userID,
                        success: function () {
                            alert("Kayıt Silindi");
                            window.location.replace("/UserAdmin/Index");
                        },
                        error: function () {
                            alert("Hata oluştu");
                            window.location.replace("/UserAdmin/Index");

                        }
                    });
            }
            else {
                alert("iptal");
            }

        });


    </script>
}


