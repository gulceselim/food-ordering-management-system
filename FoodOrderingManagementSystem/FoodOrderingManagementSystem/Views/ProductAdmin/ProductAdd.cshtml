
@{
    ViewBag.Title = "Product Add";
}


@using FoodOrderingManagementSystem.Models


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit Profile</h4>
                <p class="card-category">Complete your profile</p>
            </div>
            <label> </label>
            <label> </label>
            <label> </label>
            <label> </label>
            <div class="card-body">
                @using (Html.BeginForm("ProductAdd",
                        "ProductAdmin",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Product Name</label>
                                <input type="text" class="form-control" name="product_name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Price</label>
                                <input type="number" class="form-control" name="price" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div>
                                <label>Image</label>
                                <input id="image" type="file" class="form-control" name="file" required>
                            </div>
                            <label>@ViewBag.message</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Details</label>
                                <input type="text" class="form-control" name="details" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="">Active</label>
                            <select name="active">
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                <label>Restaurant</label>
                                <select name="restaurant_id">
                                    <option value="@Model.restaurant_id">@Model.restaurant_name</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                <label class="">Category</label>
                                <select name="category_id">
                                    @foreach (category categories in ViewBag.categories)
                                    {
                                        <option value="@categories.category_id">@categories.category_name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Add Product</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>



