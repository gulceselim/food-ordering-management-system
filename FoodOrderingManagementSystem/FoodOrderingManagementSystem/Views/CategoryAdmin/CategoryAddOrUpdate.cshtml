@model FoodOrderingManagementSystem.Models.category
@{
    ViewBag.Title = "Category Add";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit Profile</h4>
                <p class="card-category">Complete your profile</p>
            </div>
            <label> </label>
            <label> </label>
            <label> </label>
            <label> </label>
            <div class="card-body">
                @using (Html.BeginForm("Save", "CategoryAdmin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => m.category_name, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => m.category_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.category_name)
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(m=>m.category_id)
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                    <div class="clearfix"></div>

                }
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}