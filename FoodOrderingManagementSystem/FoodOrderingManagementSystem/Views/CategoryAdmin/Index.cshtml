
@{
    ViewBag.Title = "Categories";
}

@using FoodOrderingManagementSystem.Models
@model List<category>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">
                    Category
                    <label></label>
                    <label></label>
                    <label></label>
                    <a href="/CategoryAdmin/CategoryAdd" class="btn btn-primary" accesskey="">Add<i class="material-icons">add</i></a>
                </h4>
                <p class="card-category"></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var categories in Model)
                            {
                                <tr>
                                    <td>@categories.category_name</td>

                                    <td class="actions">
                                        <a href="/CategoryAdmin/CategoryUpdate/@categories.category_id" class="btn btn-modern btn-rounded btn-success mb-2">Update</a>
                                        <a href="#" class="btn btn-modern btn-rounded btn btn-danger catDel" data-catid="@categories.category_id">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Content/assets_2/js/required/jquery-1.11.1.min.js"></script>

    <script>
        $(".catDel").click(function () {
            var result = confirm("Kayıt Silinsin mi? ");
            if (result) {
                var catID = $(this).data("catid");

                $.ajax(
                    {
                        type: "POST",
                        url: "/CategoryAdmin/CategoryDelete/" + catID,
                        success: function () {
                            alert("Kayıt Silindi");
                            window.location.replace("/CategoryAdmin/Index");
                        },
                        error: function () {
                            alert("Hata oluştu");
                            window.location.replace("/CategoryAdmin/Index");

                        }
                    });
            }
            else {
                alert("iptal");
            }

        });


    </script>
}

