
@{
    ViewBag.Title = "Orders";
}

@using FoodOrderingManagementSystem.Models
@model List<OrderProduct>

@foreach (var restaurant in ViewBag.restaurants)
{
    <div class="row">
        <div class="col-md-12 Search">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">@restaurant.restaurant_name</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Product Name</th>
                                    <th>Order Type</th>
                                    <th>Price</th>
                                    <th>Shipper Name</th>
                                    <th>Details</th>
                                    @if (User.IsInRole("restaurant"))
                                    {
                                        <th>Actions</th>
                                    }
                                    </tr>
                            </thead>
                            <tbody>

                                @foreach (var order in Model)
                                {
                                    if (restaurant.restaurant_name == order.restaurant_name)
                                    {
                                    <tr class="Search">
                                        <td>@order.uFirstName @order.uLastName</td>
                                        <td>@order.product_name</td>
                                        <td>@order.order_type</td>
                                        <td>@order.price</td>
                                        <td>@order.first_name @order.last_name</td>
                                        <td>@order.order_details</td>
                                        @if (User.IsInRole("restaurant"))
                                        {
                                            <td class="actions">
                                                <a href="#" class="btn btn-modern btn-rounded btn btn-danger orderDel" data-orderid="@order.order_id">Delete</a>
                                            </td>
                                        }
                                        </tr>
                                        }
                                    }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


