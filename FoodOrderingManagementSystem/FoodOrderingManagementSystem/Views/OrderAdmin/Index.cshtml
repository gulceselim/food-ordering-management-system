
@{
    ViewBag.Title = "Orders";
}

@using FoodOrderingManagementSystem.ViewModels
@model List<OrderVM>

@if (ViewBag.count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Restaurant</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Product Name</th>
                                    <th>Order Type</th>
                                    <th>Price</th>
                                    <th>Shipper Name</th>
                                    <th>Details</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.user_name</td>
                                        <td>@order.product_name</td>
                                        <td>@order.order_type</td>
                                        <td>@order.price</td>
                                        <td>@order.shipper_name</td>
                                        <td>@order.order_details</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div style="text-align:center; color:gray"><p>There is no any user's order.</p></div>
}

