
@{ 
    int totalPrice = 0;
}

@using FoodOrderingManagementSystem.Models
@model List<basket>

@if (Model.Count != 0)
{
    <div class="container py-2">

        <div class="row">
            <div class="col">

                <div class="row">
                    <div class="col pb-3">

                        <h4>Sepet</h4>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Ürün Foto
                                    </th>
                                    <th>
                                        Ürün İsmi
                                    </th>
                                    <th>
                                        Fiyat
                                    </th>
                                    <th>
                                        Delete
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.product.image" width="50" height="50" alt="Ürün" />
                                        </td>
                                        <td>
                                            @item.product.product_name
                                        </td>
                                        <td>
                                            ₺@item.product.price 
                                        </td>
                                        <td class="actions">
                                            <a href="#" class="btn btn-modern btn-rounded btn btn-danger basketDel" data-basketid="@item.basket_id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            <tr>
                                <td></td>
                                <td>Toplam Fiyat:</td>
                                <td>₺@ViewBag.totalPrice</td>
                                <td class="actions">
                                    <a href="#" class="btn btn-modern btn-rounded btn-success mb-2">Siparişi Tamamla</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
}
else
{
    <h4>Sepetiniz Boş</h4>
}
@section script{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script>
        $(".basketDel").click(function () {
            swal("Are you sure you want to do this?", {
                buttons: ["No", "Yes"],
            }).then((result) => {
                if (result) {
                    var basID = $(this).data("basketid");

                    $.ajax(
                        {
                            type: "POST",
                            url: "/BasketUser/BasketDelete/" + basID,
                            success: function () {
                                swal({
                                    title: "İtem Deleted!",
                                    text: "You clicked the button!",
                                    icon: "success",
                                    button: "OK",
                                }).then(() => {
                                    window.location.replace("/BasketUser/Index");
                                });
                            },
                            error: function () {
                                swal("Your imaginary file is safe!");
                            }
                        });
                }
                else {
                    swal("Your imaginary file is safe!");
                }
            });
        });


    </script>
}